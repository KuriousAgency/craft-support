{% extends "_layouts/cp" %}

{% import "_includes/forms" as forms %}

{% set title = ticket.subject %}

{% set crumbs = [
    { label: 'Tickets', url: cpUrl('support') }
] %}

{% do view.registerAssetBundle("lukeyouell\\support\\assetbundles\\TicketBundle") %}

{% block content %}
<div class="new-message">
  <form method="post">
    {{ csrfInput() }}

    {{ forms.hidden({
        name: 'action',
        value: 'support/tickets/create-message',
    })}}

    {{ forms.hidden({
        name: 'ticketId',
        value: ticket.id|hash,
    })}}

    {{ forms.textareaField({
        first: true,
        required: true,
        label: 'Message',
        id: 'message',
        name: 'message',
        placeholder: 'Message',
        rows: 4
    })}}

    <input class="btn submit" type="submit" value="Send">
  </form>
</div>

<div class="messages">
  {% for message in messages %}
    <div class="message flex {#{{ message.authorId == currentUser.id ? 'current-user' }}#}">
      <div class="message-photo">
        {% if message.author.getPhoto %}
          <img src="{{ message.author.getPhoto.url}}">
        {% else  %}
          {% include "support/icons/face.svg" ignore missing %}
        {% endif %}
      </div>
      <div class="flex-grow">
        <div class="message-body">
          <div class="message-details">
            <span class="message-user">{{ message.author.name }}</span>
            <span class="message-date">{{ message.dateCreated|datetime('short') }}</span>
          </div>
          <div>
            {{ message.content }}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}

{% block details %}
  <div class="meta read-only">
    <div class="data">
      <div class="heading">
        Ticket ID
      </div>
      <div class="value">
        #{{ ticket.id }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Author
      </div>
      <div class="value">
        <a href="{{ cpUrl('users/'~author.id) }}">{{ author.name ?? author.username }}</a>
        <div>
          <code>{{ author.email }}</code>
        </div>
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Created at
      </div>
      <div class="value">
        {{ ticket.dateCreated|datetime('short') }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Updated at
      </div>
      <div class="value">
        {{ ticket.dateUpdated|datetime('short') }}
      </div>
    </div>
  </div>

  <hr>
{% endblock %}
