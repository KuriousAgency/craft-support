{% extends "_layouts/cp" %}

{% set title = ticket.subject %}

{% block content %}
  {{ d(author) }}
{% endblock %}

{% block details %}
  <div class="meta">
    <div class="field">
      <div class="heading">
        Ticket ID
      </div>
      <div class="input ltr">
        #{{ ticket.id }}
      </div>
    </div>

    <div class="field">
      <div class="heading">
        Author
      </div>
      <div class="input ltr">
        <a href="{{ cpUrl('users/'~author.id) }}">{{ author.name ?? author.username }}</a>
        <div>
          <code>{{ author.email }}</code>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
