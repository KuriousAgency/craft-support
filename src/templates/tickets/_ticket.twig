{% extends "_layouts/cp" %}

{% import "_includes/forms" as forms %}

{% set title = ticket.subject %}

{% set crumbs = [
    { label: 'Tickets', url: cpUrl('support') }
] %}

{% do view.registerAssetBundle("lukeyouell\\support\\assetbundles\\TicketBundle") %}

{% block content %}
  <div class="message flex">
    <div class="message-photo">
      {% if author.getPhoto %}
        <img src="{{ author.getPhoto.url}}">
      {% else  %}
        {% include "support/icons/face.svg" ignore missing %}
      {% endif %}
    </div>
    <div class="flex-grow">
      <div class="message-body">
        <div class="message-details">
          <span class="message-user">{{ author.name }}</span>
          <span class="message-date">5/10/2018, 2:08 PM</span>
        </div>
        <div>
          Hi,<br>
          I can't access entries after updating my password.<br>
          Pls send help.
        </div>
      </div>
    </div>
  </div>

  <div class="message current-user flex">
    <div class="flex-grow">
      <div class="message-body">
        <div class="message-details">
          <span class="message-user">Me</span>
          <span class="message-date">5/10/2018, 2:08 PM</span>
        </div>
        <div>
          You're on your own pal.
        </div>
      </div>
    </div>
    <div class="message-photo">
      {% if currentUser.getPhoto %}
        <img src="{{ currentUser.getPhoto.url}}">
      {% else  %}
        {{ svg('support/icons/face.svg') }}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block details %}
  <div class="meta read-only">
    <div class="data">
      <div class="heading">
        Ticket ID
      </div>
      <div class="value">
        #{{ ticket.id }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Author
      </div>
      <div class="value">
        <a href="{{ cpUrl('users/'~author.id) }}">{{ author.name ?? author.username }}</a>
        <div>
          <code>{{ author.email }}</code>
        </div>
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Created at
      </div>
      <div class="value">
        {{ ticket.dateCreated|datetime('short') }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Updated at
      </div>
      <div class="value">
        {{ ticket.dateUpdated|datetime('short') }}
      </div>
    </div>
  </div>

  <hr>
{% endblock %}
